{
    "event": "Deposit(uint8,bytes32,uint64,address,bytes)",
    "chain_name": "ethereum",
    "properties": { 
        "tx_input": "ethereum.get_transaction_by_hash($transaction_hash).result.input",
        "function_name": "$tx_input.slice(0,7)",
        "dst_id": "$tx_input.slice(8,72)",
        "resource_id": "$tx_input.slice(73,136)",
        "amount": "$event_data.slice(384,448)"
    },
    "pattern": [
        "$balance_after.as(u256) + $amount.as(u256) == $balance_before.as(u256)"
    ]
}