{
    "event": "SendEthToSol(address,string,uint256)",
    "chain_name": "ethereum",
    "properties": { 
        "balance_after": "ethereum.get_balance('0xa58a9d3a5e240b09da3bc0bfc011af3d20d31763', $block_number as hex).result as u256",
        "balance_before": "ethereum.get_balance('0xa58a9d3a5e240b09da3bc0bfc011af3d20d31763', 'current_block - 1').result as u256",
        "block_num_test": "ethereum.get_block_number().result as u256",
        "check_balance": "ethereum.get_balance('0xa58a9d3a5e240b09da3bc0bfc011af3d20d31763', '$block_num_test as hex').result as u256",
        "verify_payer": "bridge.verify($payer).result"
    },
    "pattern": [
        "$balance_after <= $balance_before",
        "$balance_after == $check_balance",
        "$verify_payer"
    ]
}