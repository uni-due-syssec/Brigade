{
    "event": "InconsistentDepositLogic(uint256,string,uint256)",
    "chain_name": "ethereum",
    "properties": { 
        "balance_after": "call(ethereum, get_balance, [$payer_address, $ethereum_block_number.as(hex)]).get(result)",
        "balance_before": "call(ethereum, get_balance, [$payer_address, ($ethereum_block_number - 1).as(hex)]).get(result)",
        "gas_amount": "call(ethereum, get_transaction_by_hash, [$transaction_hash]).get(result).get(gas)",
        "gas_price": "call(ethereum, get_transaction_by_hash, [$transaction_hash]).get(result).get(gasPrice)",
        "amount": "$event_data.slice(130,194).as(hex)"
    },
    "pattern": [
        "$value >= ($amount + (gas_price * gas_amount))"
    ]
}
