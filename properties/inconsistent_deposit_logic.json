{
    "event": "InconsistentDepositLogic(uint256,string,uint256)",
    "chain_name": "ethereum",
    "properties": { 
        "balance_after": "ethereum.get_balance($payer_address, $ethereum_block_number.as(hex)).result",
        "balance_before": "ethereum.get_balance($payer_address, ($ethereum_block_number.as(u256) - 1).as(hex)).result",
        "gas_amount": "ethereum.get_transaction_by_hash($transaction_hash).result.gas",
        "gas_price": "ethereum.get_transaction_by_hash($transaction_hash).result.gasPrice"
    },
    "pattern": [
        "$balance_after.as(u256) + ( $gas_amount.as(u256) * $gas_price.as(u256) ) < $balance_before.as(u256)"
    ]
}