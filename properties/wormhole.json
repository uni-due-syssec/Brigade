{
    "event": "EVENT: signature is verified",
    "chain_name": "solana",
    "properties": { 
        "instructions": "solana.get_transaction($transaction_hash).result.transaction.message.instructions",
        "ins_map": "$instructions.at(0)",
        "accounts_map": "$ins_map.get(accounts)",
        "sys_var_account": "$accounts_map.at(2)",
        "intended_account": "KeccakSecp256k11111111111111111111111111111"
    },
    "pattern": [
        "$sys_var_account == $intended_account"
    ]
}